<h1>Listing posts</h1>

<table>
  <tr>
    <th>User</th>
    <th>Topic</th>
    <th>Body</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th>Forum</th>
    <th>Body html</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.user_id %></td>
    <td><%= post.topic_id %></td>
    <td><%= post.body %></td>
    <td><%= post.created_at %></td>
    <td><%= post.updated_at %></td>
    <td><%= post.forum_id %></td>
    <td><%= post.body_html %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

